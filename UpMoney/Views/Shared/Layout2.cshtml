        <!-- Modal Structure -->
        <div id="modal2" class="modal">
            
            <div class="modal-content" style="background-color: #81c784">
            <h5>Entradas</h5>
        </div>

        <div class="row">
            <form class="col s6">
 
                <div class="row">
                    <div class="input-field col s6">
                        <!-- <p>Digite um Valor:</p> -->
                        <input id="valor_inline" type="text" class="validate">
                        <label for="valor_inline">Valor:</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <input disabled value="I am not editable" id="disabled" type="text" class="validate">
                        <label for="disabled">Disabled</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <input id="descricao_inline" type="text" class="validate">
                        <label for="descricao_inline">Descrição:</label>
                    </div>
                </div>

                <select>
                    <option value="" disabled selected>Selecione uma opção</option>
                    <option value="1">Salário</option>
                    <option value="2">Outras Rendas</option>
                    <option value="3">Reembolso</option>
                    <option value="3">Estorno</option>
                </select>
                <label>Tipo de Receita</label>



                <div class="row">
                    <div class="col s12">
                        This is an inline input field:
                        <div class="input-field inline">
                            <input id="email_inline" type="email" class="validate">
                            <label for="email_inline">Email</label>
                            <span class="helper-text" data-error="wrong" data-success="right">Helper text</span>
                        </div>
                    </div>
                </div>

            </form>
        </div>



            <div class="modal-footer">
                <a href="#!" class="modal-close waves-effect waves-green btn-flat">Adicionar</a>
                <a href="#!" class="modal-close waves-effect waves-green btn-flat">Cancelar</a>
